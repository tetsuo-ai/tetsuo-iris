---
import TradingViewWidget from "../components/TradingViewWidget";
import WhaleTransactionsWidget from "../components/WhaleTransactionsWidget";
---

<div class="bg-zinc-950">
  <div class="p-4 h-screen flex gap-4 overflow-hidden">
    <nav class="w-16 h-full bg-zinc-900"></nav>
    <div class="grow grid gap-4">
      <div class="h-[40rem]">
        <TradingViewWidget client:load />
      </div>
      <div class="overflow-y-auto">
        <WhaleTransactionsWidget client:visible />
      </div>
    </div>
  </div>
</div>
