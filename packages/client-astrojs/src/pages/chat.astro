---

<Layout title="Companion | Chat">
  <div class="p-4 h-screen flex gap-4 overflow-hidden">
    <Sidebar />
    <div class="grow grid place-items-center">
      <div class="grid grid-cols-2 gap-4">
        {availableAgents.map((agent) => (
          <a href={`/chat/${agent.role.toLowerCase()}`} class="chat-agent-option">
            <h2 class="title">{agent.title}</h2>
            <p class="description">{agent.description}</p>
          </a>
        ))}
      </div>
    </div>
  </div>
</Layout>

<style lang="postcss">
  .chat-agent-option {
    @apply p-4 border border-zinc-900;
    @apply flex flex-col gap-2;
    @apply hover:cursor-pointer hover:bg-zinc-900;
    @apply transition-all duration-150;

    .title {
      @apply text-xl text-zinc-200 font-semibold;
    }
    .description {
      @apply text-zinc-400;
    }
  }
</style>
